<Window x:Class="Minesweeper.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Minesweeper"
        Height="600"
        Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        >
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Margin="10" Background="CadetBlue" ShowGridLines="True" x:Name="BoardGrid">
        </Grid>
        

        <StackPanel Grid.Row="1" Margin="10" Orientation="Horizontal">
            <Label Content="Unflagged mines: " VerticalAlignment="Center"></Label>
            <TextBlock Text="{Binding Path=UnflaggedMineCount, Mode=OneWay}" VerticalAlignment="Center"></TextBlock>
        </StackPanel>
        
    </Grid>
    
</Window>
